{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MCP Weather App",
  "version": "0.1.0",
  "identifier": "com.tauri-app.mcp-weather",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MCP Weather App",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "resources": {
      "includes": ["src/mcp_weather_server.js", "src/node_modules/**/*"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
